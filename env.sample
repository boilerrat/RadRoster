# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/radroster_db
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/radroster_test_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-long-and-random
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Cloud Messaging (Push Notifications)
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY_ID=your-firebase-private-key-id
FCM_PRIVATE_KEY=your-firebase-private-key
FCM_CLIENT_EMAIL=your-firebase-client-email
FCM_CLIENT_ID=your-firebase-client-id
FCM_CLIENT_CERT_URL=your-firebase-client-cert-url

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000/api

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# File Upload (for reports)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn-here 